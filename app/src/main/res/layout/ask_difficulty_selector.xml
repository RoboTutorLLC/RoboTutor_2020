<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3FAFF">

    <ImageButton
        android:id="@+id/Sbutton1"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:padding="0dp"
        app:layout_heightPercent="33%"
        app:layout_widthPercent="33%"
        android:background="@null"
        />

    <ImageButton
        android:id="@+id/Sbutton2"
        android:layout_below="@id/Sbutton1"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:padding="0dp"
        app:layout_heightPercent="33%"
        app:layout_widthPercent="33%"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/Sbutton3"
        android:layout_below="@id/Sbutton2"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:padding="0dp"
        app:layout_heightPercent="33%"
        app:layout_widthPercent="33%"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/Sbutton4"
        android:layout_toRightOf="@id/Sbutton2"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:padding="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="33%"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/Sbutton5"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/Sbutton4"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:padding="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="33%"
        android:layout_centerVertical="true"
        android:background="@null"/>


    <ImageButton
        android:id="@+id/Sbutton6"
        android:layout_toRightOf="@id/Sbutton4"
        android:layout_below="@id/Sbutton5"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:padding="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="33%"
        android:layout_centerVertical="true"
        android:background="@null"/>

    <cmu.xprize.robotutor.tutorengine.widgets.core.THandAnimation
        android:id="@+id/ShandAnimator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        app:scale_factor="0.3"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp" />


</androidx.percentlayout.widget.PercentRelativeLayout>