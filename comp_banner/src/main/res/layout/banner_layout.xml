<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:clipChildren="false">

    <!-- in Relative layout - views have to be defined before being referenced -->

    <cmu.xprize.robotutor.tutorengine.widgets.core.TTextView
        android:id="@+id/StutorVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text=""
        android:textSize="25sp"
        android:textColor="#FFF"
        />


    <ImageButton
        android:id="@+id/SlevelSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/StutorVersion"
        app:layout_marginRightPercent="4%"
        android:alpha=".9"
        android:src="@drawable/level_button"
        android:visibility="gone"
        android:background="@null"/>


    <ImageButton
        android:id="@+id/Sbackbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/back_button"
        android:visibility="visible"
        android:background="@null"/>


    <cmu.xprize.banner.persona.Persona
        android:visibility="gone"
        android:id="@+id/Spersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%"
        android:layout_centerInParent="true"/>

    <cmu.xprize.comp_intervention.views.CInterventionHelpButton
        android:id="@+id/SHelpButton"
        app:layout_heightPercent="80%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/handraise_icon"
        android:background="#80000000"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>

    <cmu.xprize.comp_intervention.views.CInterventionDebuggerMenu
        android:id="@+id/SinterventionDebugger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="400sp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light"
        >

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/Shesitate"
            android:text="HESITATE:"
             />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/Sstuck"
            android:text="STUCK:"
            />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/Sgesture"
            android:text="GESTURE:"
            />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/Sfailure"
            android:text="FAILURE:"
            />

    </cmu.xprize.comp_intervention.views.CInterventionDebuggerMenu>


    <ImageButton
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:layout_marginLeftPercent="8%"
        android:alpha=".9"
        android:src="@drawable/exit_button"
        android:visibility="gone"
        android:background="@null"/>

</androidx.percentlayout.widget.PercentRelativeLayout>