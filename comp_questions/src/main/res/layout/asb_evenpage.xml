<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/story_questions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <!-- <Button
        android:id="@+id/forwardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250px"
        android:layout_marginTop="950px"
        android:text="Forward" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="950px"
        android:text="Back" /> -->

    <ImageView
        android:id="@+id/SpageImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        android:scaleType="fitCenter"
        app:layout_widthPercent="50%" />

    <FrameLayout
        android:id="@+id/SsideViewQuestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        android:scaleType="fitCenter"
        app:layout_widthPercent="50%" />

    <TextView
        android:id="@+id/Sword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="20%"/>

    <TextView
        android:id="@+id/Sword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Sword1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="20%"/>

    <TextView
        android:id="@+id/Sword3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Sword2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="20%"/>

    <TextView
        android:id="@+id/Sword4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Sword3"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="20%"/>

    <TextView
        android:id="@+id/SstoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="60dp"
        android:layout_toLeftOf="@+id/SpageImage"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_widthPercent="50%" />

    <ImageButton
        android:id="@+id/Sspeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SstoryText"
        android:layout_alignStart="@+id/SstoryText"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="250dp"
        android:background="#ffffff"
        android:src="@drawable/speak_button" />

    <ImageButton
        android:id="@+id/SpageFlip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/SpageImage"
        android:layout_alignStart="@+id/SstoryText"
        android:layout_below="@+id/SstoryText"
        android:layout_marginLeft="250dp"
        android:background="#ffffff"
        android:src="@drawable/page_flip_button" />


    <FrameLayout
        android:id="@+id/SfullViewQuestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" >

        <LinearLayout
            android:id="@+id/NarrateControls"
            android:layout_width="184dp"
            android:layout_height="63dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@null"
                android:text="Back"
                android:visibility="visible"
                app:layout_heightPercent="100%"
                app:layout_marginLeftPercent="41%" />

            <Button
                android:id="@+id/forwardButton"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:text="Forward"
                android:visibility="visible"
                app:layout_heightPercent="100%"
                app:layout_marginLeftPercent="51%"
                app:layout_marginTopPercent="90%" />
        </LinearLayout>

    </FrameLayout>


</android.support.percent.PercentRelativeLayout>

