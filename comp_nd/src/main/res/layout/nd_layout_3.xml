                    android:layout_height="@dimen/nd_one_block_size"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="@dimen/one_block_filler"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Right Symbols -->
