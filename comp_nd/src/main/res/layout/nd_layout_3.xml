                    android:layout_width="10dp"
                    android:layout_height="@dimen/nd_10_height"
                    android:layout_marginLeft="@dimen/baseten_tenspacer"
                    android:src="@drawable/blue_10_v"/>

                <ImageView
                    android:id="@+id/left_ten_9"
                    android:layout_width="10dp"
                    android:layout_height="@dimen/nd_10_height"
                    android:layout_marginLeft="@dimen/baseten_tenspacer"
                    android:src="@drawable/blue_10_v"/>

