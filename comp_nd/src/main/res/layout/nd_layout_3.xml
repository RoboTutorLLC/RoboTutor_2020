                android:layout_width="@dimen/nd_100_size"
                android:layout_height="@dimen/nd_100_size"
                android:layout_margin="@dimen/nd_inner_100_margin"/>


        </LinearLayout>

        <!-- Tens Left -->
        <!-- This View acts as a spacer so we fill the whole box -->
